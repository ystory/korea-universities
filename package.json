{
	"name": "korea-universities",
	"version": "1.0.1",
	"description": "Korea Universities List and Accreditation Check Library",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"test": "vitest",
		"lint": "biome check src",
		"format": "biome check --write src",
		"prepublishOnly": "pnpm run build",
		"scrape": "tsx scripts/scrape-universities.ts",
		"scrape:acc": "tsx scripts/scrape-accreditation.ts",
		"build:data": "tsx scripts/build-data.ts"
	},
	"keywords": [
		"korea",
		"university",
		"accreditation",
		"인증대학"
	],
	"author": "Yongsul Kim (https://github.com/ystory)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ystory/korea-universities.git"
	},
	"bugs": {
		"url": "https://github.com/ystory/korea-universities/issues"
	},
	"homepage": "https://github.com/ystory/korea-universities#readme",
	"packageManager": "pnpm@10.28.0",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^25.0.6",
		"playwright": "^1.57.0",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"sideEffects": false
}
